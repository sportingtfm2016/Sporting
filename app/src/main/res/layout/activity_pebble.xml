<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/accent_material_dark"
android:clipToPadding="false"
android:fitsSystemWindows="true"
    tools:context="com.tfm.sporting.sporting.PebbleActivity">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/install_watchapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONEXIÃ“N PEBBLE"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_vibrate"
        android:layout_alignEnd="@+id/button_vibrate" />

    <TextView
        android:id="@+id/press_a_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Datos recibidos:"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="25sp"
        android:layout_below="@id/install_watchapp" />

    <TextView
        android:id="@+id/which_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/press_a_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="None yet"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/trigger_vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/which_button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Enviar datos:"
        android:textColor="@color/material_blue_grey_800"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button_vibrate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/trigger_vibrate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/material_blue_grey_800"
        android:text="VIBRATE"
        android:textColor="#FFFFFF" />
</RelativeLayout>

</LinearLayout>